<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment" >

    <TextView
        tools:text="USD"
        android:layout_marginTop="@dimen/sp16"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        android:id="@+id/tv_page_title"
        android:paddingStart="@dimen/sp16"
        android:background="@color/colorWhite"
        android:drawablePadding="@dimen/dp4h"
        android:layout_marginBottom="@dimen/sp3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp44h"
        app:drawableStartCompat="@drawable/ic_baseline_monetization_on_24" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_rates"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</LinearLayout>